<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.project.mall.product.service.ProductMapper">

  	<!-- 리스트목록에서 검색기능 포함 -->
  	<select id="getList" resultType="com.project.mall.command.ProductVO">
  		select * 
  		from product
  		<if test="searchName != '' and searchName != null">
  		where product_name like concat('%',#{searchName},'%' )
  		</if> 
  		order by product_no desc
  	</select>
  	

  </mapper>